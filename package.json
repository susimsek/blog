{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "description": "Blog application",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky",
    "prettier:format": "prettier --write */**/*.{md,json,js,ts,html,tsx,css,scss}",
    "build": "npm run webapp:prod --",
    "postbuild": "node scripts/generate-sitemap.js && node scripts/generate-rss.js",
    "webapp:dev": "npm run clean-www && next dev",
    "webapp:prod": "npm run clean-www && npm run webapp:build:prod",
    "webapp:build:prod": "next build",
    "clean-www": "rimraf build/*",
    "sonar": "npx sonar-scanner",
    "jest": "jest --coverage --logHeapUsage --maxWorkers=2 --config jest.config.js",
    "test": "npm run jest --",
    "test:watch": "npm run jest -- --watch",
    "fetch:medium": "node scripts/fetch-medium-feed.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@hookform/resolvers": "^5.1.1",
    "@next/third-parties": "^15.3.4",
    "@reduxjs/toolkit": "^2.8.2",
    "bootstrap": "^5.3.7",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "next": "^15.3.4",
    "next-i18next": "^15.4.2",
    "next-language-detector": "^1.1.0",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.5.3",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "rss-parser": "^3.13.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-bootstrap": "^1.0.1",
    "@types/react-dom": "^19.1.6",
    "@types/react-redux": "^7.1.34",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.6",
    "i18next-resources-for-ts": "^1.6.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "jest-sonar": "0.2.16",
    "lint-staged": "^16.1.2",
    "picocolors": "^1.1.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "1.32.0",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "url-loader": "^4.1.1"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "cacheDirectories": [
    "node_modules"
  ]
}
